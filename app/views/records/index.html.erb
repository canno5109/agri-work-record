<p id="notice"><%= notice %></p>

<h1>作業記録</h1>

<table>
  <thead>
    <tr>
      <th>氏名</th>
      <th>作物名</th>
      <th>日付</th>
      <th>農作業名</th>
      <th>作業理由</th>
      <th>技術的補足</th>
      <th>考察</th>
      <th>エビデンス</th>
      <th>写真</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.user_name %></td>
        <td><%= record.crop_name %></td>
        <td><%= record.date.strftime('%Y年%m月%d日') %></td>
        <td><%= record.work_name %></td>
        <td><%= record.work_reason %></td>
        <td><%= record.technical_supplement %></td>
        <td><%= record.consideration %></td>
        <td><%= record.evidence %></td>
        <td><%= record.photo %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

